<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Resources Page</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/main.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/resources.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/resources.js"></script>
  </head>
  <body>
    <div class="add_form">
      <form class="form-inline" action="/resources/new" method="POST">
        <div class="form-group">
          <label for="title">TITLE:</label>
          <input
            type="text"
            class="form-control"
            id="title"
            name="title"
            placeholder="Resource Title"
          />
        </div>
        <div class="form-group">
          <label for="resource_url">URL</label>
          <input
            type="url"
            class="form-control"
            id="url"
            name="url"
            placeholder="Password"
          />
        </div>
        <div class="form-group">
          <label for="description">DESCRIPTION:</label>
          <input
            type="text"
            class="form-control"
            id="description"
            name="description"
            placeholder="Resource description"
          />
        </div>
        <div class="form-group">
          <label for="categorey">CATEGORY:</label>
          <input
            type="text"
            class="form-control"
            id="categorey"
            name="categorey"
            placeholder="Resource category"
          />
        </div>

        <button type="submit" class="btn btn-primary">SUBMIT</button>
        <button type="button" class="cancel btn btn-primary">CANCEL</button>
      </form>
    </div>
    <button class="add_button">Add new resource</button>
    <div id="resource-container"></div>
  </body>
</html>
